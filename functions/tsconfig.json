{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017", 
    "paths": {
      "@google-drive-credentials": [
        "./src/google-drive-credentials"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
